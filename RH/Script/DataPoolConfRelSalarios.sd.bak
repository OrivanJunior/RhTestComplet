var
CadRelSalarioDPIdConf,
CadRelSalarioDPDescricao,

CadRelSalDPSequencia,
CadRelSalDPConfValorPadrao,
CadRelSalDPrelDescricao,
CadRelSalDPNomedaColuna,
CadRelSalDPOrdemdasColunas : OleVariant;





procedure LeDataPoolCadRelSal(nomeDriver);
begin
CadRelSalarioDPIdConf  			  :=DDT.DriverByName(nomeDriver).Value('IDCONF');
CadRelSalarioDPDescricao    	:=DDT.DriverByName(nomeDriver).Value('DESCRICAO');

CadRelSalDPSequencia			    :=DDT.DriverByName(nomeDriver).Value('SEQUENCIA');
CadRelSalDPConfValorPadrao    :=DDT.DriverByName(nomeDriver).Value('CONFVALORPADRAO');
CadRelSalDPRelDescricao	        :=DDT.DriverByName(nomeDriver).Value('RELDESCRICAO');
CadRelSalDPNomedaColuna	      :=DDT.DriverByName(nomeDriver).Value('NOMEDACOLUNA');
CadRelSalDPOrdemdasColunas    :=DDT.DriverByName(nomeDriver).Value('ORDEMDASCOLUNAS');
end;