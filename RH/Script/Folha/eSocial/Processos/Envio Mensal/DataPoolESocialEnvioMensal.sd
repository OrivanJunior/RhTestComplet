  FiltroMesAnoPagamento        := DDT.DriverByName(nomeDriver).Value('MES_ANO_PAGTO');
  FiltroDataAlteracao          := DDT.DriverByName(nomeDriver).Value('DATA_ALTERACAO');
end;                                      
										
