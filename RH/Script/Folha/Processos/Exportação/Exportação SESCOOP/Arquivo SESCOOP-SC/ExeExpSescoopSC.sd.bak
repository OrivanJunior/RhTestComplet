  PreencheDatas(FormExpSescoopSCWhMesAno, FiltroMesAno);
  VerificaInsere(FormExpSescoopSCWhLocalGrav, FiltroLocalGrav);
  VerificaInsere(FormExpSescoopSCWhTelefone, FiltroTelefone);
