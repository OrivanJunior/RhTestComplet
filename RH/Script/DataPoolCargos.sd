var
CadCargosDPIdCargos,
CadCargosDPDescricao,
CadCargosDPFuncao,
CadCargosDPFunDescricao,
CadCargosDPIdCbo : OleVariant;


procedure LeDataPoolCadCargos(nomeDriver);
begin
CadCargosDPIdCargos     := DDT.DriverByName(nomeDriver).Value('IDCARGO');
CadCargosDPDescricao    := DDT.DriverByName(nomeDriver).Value('DESCRICAO');
CadCargosDPIdCbo        := DDT.DriverByName(nomeDriver).Value('IDCBO');
CadCargosDPFuncao		    := DDT.DriverByName(nomeDriver).Value('FUNCAO');
CadCargosDPFunDescricao	:= DDT.DriverByName(nomeDriver).Value('FUNDESCRICAO');
end;